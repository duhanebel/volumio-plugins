{
    "page": {
        "label": "TRANSLATE.CONFIG.TITLE"
    },
    "sections": [
        {
            "id": "settings",
            "element": "section",
            "label": "TRANSLATE.CONFIG.SETTINGS",
            "icon": "fa-cog",
            "onSave": {
                "type": "controller",
                "endpoint": "music_service/planetrock_radio",
                "method": "updateConfig"
            },
            "saveButton": {
                "label": "TRANSLATE.CONFIG.SAVE",
                "data": [
                    "username",
                    "password",
                    "metadata_delay"
                ]
            },
            "content": [
                {
                    "id": "username",
                    "element": "input",
                    "label": "TRANSLATE.CONFIG.USERNAME",
                    "description": "TRANSLATE.CONFIG.AUTH_DESCRIPTION",
                    "placeholder": "TRANSLATE.CONFIG.USERNAME_PLACEHOLDER",
                    "value": ""
                },
                {
                    "id": "password",
                    "element": "input",
                    "label": "TRANSLATE.CONFIG.PASSWORD",
                    "placeholder": "TRANSLATE.CONFIG.PASSWORD_PLACEHOLDER",
                    "value": "",
                    "type": "password"
                },
                {
                    "id": "metadata_delay",
                    "element": "input",
                    "label": "TRANSLATE.CONFIG.METADATA_DELAY",
                    "description": "TRANSLATE.CONFIG.METADATA_DESCRIPTION",
                    "placeholder": "TRANSLATE.CONFIG.METADATA_DELAY_PLACEHOLDER",
                    "value": "10",
                    "type": "number",
                    "min": 0,
                    "max": 60
                }
            ]
        },
        {
            "id": "info",
            "element": "section",
            "label": "TRANSLATE.CONFIG.ABOUT",
            "icon": "fa-info-circle",
            "description": "TRANSLATE.CONFIG.DESCRIPTION"
        }
    ]
}